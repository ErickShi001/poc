<mvc:View xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="help.App">
  <Panel headerText="Binding (Header Only)" class="sapUiResponsiveMargin" width="auto">
    <content>
      <Label text="Id"/>
      <Input id="idId" value="{id}" valueLiveUpdate="true"/>
      <Label text="Business Partner" />
      <Input id="id2" value="{bpId}"  valueLiveUpdate="true"/>
      <Label text="Document Total" />
      <Input id="id3" value="{docTotal}"  valueLiveUpdate="true"/>
      
      <Button text="New" press="onNew" />
      <Button text="Create" press="onCreate" />
      <Button text="Load" press="onLoad" />
      <Button text="Update" press="onUpdate" />
      <Button text="Delete" press="onDelete" />
    </content>
  </Panel>
</mvc:View>